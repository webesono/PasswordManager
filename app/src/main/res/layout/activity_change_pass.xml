<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/changePassContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.ProfileActivity"
    android:background="@drawable/background_content_bottom">

    <TextView
        android:id="@+id/tvGantiPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Ganti Password"
        android:textSize="@dimen/_18ssp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textStyle="bold"
        android:textColor="@color/primary2"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/tvGantiPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvOldPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password utama saat ini"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etOldPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textSize="@dimen/_13ssp"
            android:inputType="textPassword"
            android:textColor="@color/primaryLine"
            android:background="@drawable/blue_list"
            android:hint="Isi jika ingin ubah password"
            app:layout_constraintTop_toBottomOf="@id/tvOldPass"
            />

        <TextView
            android:id="@+id/tvNewPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password utama baru"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/etOldPass"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etNewPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textSize="@dimen/_13ssp"
            android:inputType="textPassword"
            android:textColor="@color/primaryLine"
            android:background="@drawable/blue_list"
            android:hint="Isi jika ingin ubah password"
            app:layout_constraintTop_toBottomOf="@id/tvNewPass"
            />

        <Button
            android:id="@+id/btnUbahMainPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_8sdp"
            android:text="Ubah!"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:backgroundTint="#80FCAB86"
            android:background="@drawable/bt_rounded"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/etNewPass"
            app:layout_constraintEnd_toEndOf="@id/etNewPass"
            app:layout_constraintBottom_toBottomOf="parent"
            android:focusable="true"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>